
<div id="<%= dom_id recipe %>">
  <p>
    <strong>Name:</strong>
    <%= recipe.name %>
  </p>

  <p>
    <strong>Preparation Time:</strong>
    <%= recipe.preparation_time.strftime('%H:%M') %>
  </p>

  <p>
    <strong>Cooking Time:</strong>
    <%= recipe.cooking_time.strftime('%H:%M') %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= recipe.description %>
  </p>

  <p>
    <strong>Public:</strong>
    <%= recipe.public %>
  </p>
</div>
