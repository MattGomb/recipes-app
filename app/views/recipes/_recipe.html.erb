<div class="row px-3" id="<%= dom_id recipe %>">
  <div class="col-5 ml-2">
    <h4><%= recipe.name %></h4>
    <% if can? :destroy, recipe %>
      <%= button_to "REMOVE", recipe, method: :delete, class: "btn btn-danger" %>
    <% end %>
  </div>

  <div class="col-7">
    <p><%= recipe.description %></p>
  </div>
</div>
